doctype html
html
  head
    title Students List
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1.text-center.mb-4 Student Management

      a.btn.btn-primary(href="/student/create") Add New Student

      table.table.table-striped.mt-4
        thead
          tr
            th Name
            th Age
            th City
            th Department
            th Actions
        tbody
          each student in students
            tr
              td= student.name
              td= student.age
              td= student.city
              td= student.department
              td
                a.btn.btn-info.btn-sm(href=`/student/${student._id}`) View
                a.btn.btn-warning.btn-sm.ms-1(href=`/student/edit/${student._id}`) Edit
                form(method="POST", action=`/student/delete/${student._id}`, style="display:inline-block")
                  button.btn.btn-danger.btn-sm.ms-1(type="submit") Delete
